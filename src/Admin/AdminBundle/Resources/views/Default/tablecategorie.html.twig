</div>
<div class="row">
{% block search %}
{% include ':templateAdmin:search.html.twig' %}
{% endblock %}
</div>
{% for flash_message in app.session.flashBag.get('delete') %}
<div class="row">
    <div class="label label-success">
        {{ flash_message }}
    </div>
</div>
{% endfor %}
<style>
.panel-heading div {
            margin-top: -18px;
            font-size: 15px;
        }
        .panel-heading div span{
            margin-left:5px;
        }
</style>
<div class="row text-center">
    <div class='col-xs-10 col-xs-offset-1'>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Categorie</h2>
            </div>
           
                <table  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                <label>id</label> 
                                <i class="fa fa-chevron-circle-down" aria-hidden="true"></i>
                                <i class="fa fa-chevron-circle-up" aria-hidden="true"></i>
                            </th>
                            <th>
                                 <label>name</label>
                                <i class="fa fa-chevron-circle-down" aria-hidden="true"></i>
                                <i class="fa fa-chevron-circle-up" aria-hidden="true"></i>
                            </th>
                            <th>
                                 <label>parents</label>
                                <i class="fa fa-chevron-circle-down" aria-hidden="true"></i>
                                <i class="fa fa-chevron-circle-up" aria-hidden="true"></i>
                            </th>
                            <th>
                                action
                            </th>
                        </tr>
                    </thead>
        {% for categorie in listCategorie %}
		    <tr>
		        <td>
		        {{ categorie.id }}
		        </td>
		        <td>
		        {{ categorie.name }}
		        </td>
		        <td>
			{# 	{% if categorie.parents.id is empty and categorie.parents.id is defined %}	
		        	toto
		        {% endif %} #}
		        {% dump(categorie.parents) %}
		        </td>
		        <td>
		        <ul>
				<a href="{{ path('admin_categorie_delete',{'id':categorie.id}) }}">
					<li><i class="fa fa-trash-o" aria-hidden="true"></i>delete</li>
				</a>
		        <a href="{{ path('admin_categorie_edit',{'id':categorie.id}) }} ">
		        	<li><i class="fa fa-pencil" aria-hidden="true"></i>edit</li></a>
		        </ul>
		        </td>
		    </tr>
		{% endfor %}

               </table>
        </div>
    </div>
    <div class="row text-center">
        <div class='col-xs-12'>
        <ul class="pagination">
                <li>
                    <a href="">

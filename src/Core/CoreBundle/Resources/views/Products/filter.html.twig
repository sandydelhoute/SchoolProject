<div class="col-xs-12 col-md-4" id="filter">
  <div class="panel panel-default ">
    <div class="panel-heading">
      <h3>Filtres</h3>
    </div>
    <div class="panel-body panel-group">
       <div class="panel panel-default">
           <a data-toggle="collapse" data-parent="#tunnel" href="#type_content" class="collapsed" aria-expanded="false">
        <div class="title-filter panel-heading">
        <strong>Type de produis</strong>
        <i class="fa fa-angle-down arrow" aria-hidden="true"></i>
        </div>
      </a>
        <div class="panel-body collapse" id="type_content">
          <label for="menu_select">Menu</label>
          <input type="radio" value="menu" id="menu_select" name='selecttype'></input>
          <label for="produit_select">Produits</label>
          <input type="radio" value="product" id="produit_select" name='selecttype' checked="checked"></input>
        </div>
      </div>
      <div class="panel panel-default">
        <a data-toggle="collapse" data-parent="#tunnel" href="#allergene_content" class="collapsed" aria-expanded="false">
        <div class="title-filter panel-heading">
        <strong>Allergènes</strong>
        <i class="fa fa-angle-down arrow" aria-hidden="true"></i>
        </div>
      </a>
        <div class="panel-body collapse" id="allergene_content">
          {% for allergene in listAllergene %}
          <div class="col-xs-6 col-md-6">
            <input type="checkbox" value="{{ allergene.name }}" class="allergenes-filter"  />
            <label for="arachide" title="{{ allergene.description }}">{{ allergene.name }}</label>
          </div>
    {% endfor %}
        </div>
      </div>
      <div class="panel panel-default">
      <a data-toggle="collapse" href="#categorie_content" class="collapsed" aria-expanded="false">
        <div class="title-filter panel-heading">
        <strong>Catégories</strong>
        <i class="fa fa-angle-down arrow" aria-hidden="true"></i>
        </div>
      </a>
        <div class="panel-body collapse" id="categorie_content">
          {% for categorie in listCategorie %}
          <div class="col-xs-6 col-md-6">
            <input type="checkbox" value="{{ categorie.name }}" class="categories-filter" checked />
            <label for="arachide">{{ categorie.name }}</label>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="panel panel-default">
        <a data-toggle="collapse" href="#prix_content" class="collapsed" aria-expanded="false">
          <div class="title-filter panel-heading">
            <strong>Prix</strong>
            <i class="fa fa-angle-down arrow" aria-hidden="true"></i>
          </div>
        </a>
        <div class="panel-body collapse" id="prix_content">
          <div class="col-xs-12 barre-prix" >
             <label for="rangeinput" id="rangelabel">Prix</label>
            <input type="text" class="text-center" id="rangeinput" disabled>
            <div id="range"></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 " id="actionfilter">
        <div class="col-xs-12 col-md-8">
          <button type="button" class="btn btn-green" id="applyfilter">Appliquer&nbsp;&nbsp;<i class="fa fa-check" aria-hidden="true"></i></button>
        </div>
      <div class="col-xs-12 col-md-4">
        <button type="button" class="btn btn-danger" id="resetfilter"><i class="fa fa-refresh" aria-hidden="true"></i></button>
      </div>
    </div>
  </div>
</div>
</div>

<div class="col-xs-12 col-md-4" id="filter">

  <div class="panel panel-default ">
    <div class="panel-heading">
      <h3>Filtres</h3>
    </div>
    <div class="panel-body">
      <div class="title-filter">
        <strong>Allergènes</strong>
      </div>
      {% for allergene in listAllergene %}
       <div class="col-xs-6 col-md-6">
        <input type="checkbox" value="{{ allergene.name }}" class="allergenes-filter" checked="checked" />
        <label for="arachide" title="{{ allergene.description }}">{{ allergene.name }}</label>
      </div>
    {% endfor %}
  </div>
  <div class="panel-body">
    <div class="title-filter">
      <strong>Catégories</strong>
    </div>
    {% for categorie in listCategorie %}
     <div class="col-xs-6 col-md-6">
      <input type="checkbox" value="{{ categorie.name }}" class="price-filter" />
      <label for="arachide">{{ categorie.name }}</label>
    </div>
  {% endfor %}
  <div class="title-filter">
    <strong>Prix</strong>
  </div>
  <div class="col-lg-12 barre-prix">
    <input type="range" min="0" max="100">
  </div>
  <div class="col-lg-12">
    <div class="col-lg-6">
     <button type="button" class="btn btn-green" id="applyfilter">Appliquer<i class="fa fa-check" aria-hidden="true"></i></button>
   </div>
   <div class="col-lg-6">
     <button type="button" class="btn btn-danger"><i class="fa fa-refresh" aria-hidden="true"></i></button>
   </div>
 </div>
</div>
</div>
</div>
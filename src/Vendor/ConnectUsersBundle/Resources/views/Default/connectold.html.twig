{% extends "::base.html.twig" %}

{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ error.message| replace({"Bad credentials." : "Invalid username or password."}) }}</div>
  {% endif %}

  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
  <form action="{{ path('login_check') }}" method="post">
    <label for="username">Login :</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" />
    <br />
    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">Remenber</label>
    </br>
    <input class="btn btn-primary" type="submit" value="Connexion" />
  </form>
    <a href="{{ path('page_moncompte_deconnection') }}"><div class='btn btn-primary' value="deconnection" />deconnexion</div></a>

{% endblock %}